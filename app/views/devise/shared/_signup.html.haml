= simple_form_for(@user, url: session_path(@user)) do |f|
  = devise_error_messages!
  = f.input :email, label: 'メールアドレス', autofocus: true
  = f.input :password, label: 'パスワード', autocomplete: 'off'
  - if devise_mapping.rememberable?
    = f.input :remember_me, as: :boolean, label: 'ログイン状態の維持'
  = f.button :submit, 'ログイン', class: 'btn btn-primary'
